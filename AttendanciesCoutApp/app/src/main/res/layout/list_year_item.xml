<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="180dp"
    android:layout_margin="10dp"
    android:translationZ="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_for_item"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/list_item_year_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Курс" />
    <LinearLayout
        android:id="@+id/list_item_document_salary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_year_text_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/list_item_year_end_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_item_year_start_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Дата от"
            />

        <TextView
            android:id="@+id/list_item_year_start_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="18sp"
            android:layout_margin="6dp"

            app:layout_constraintEnd_toStartOf="@+id/list_item_year_end_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Дата До" />
    </LinearLayout>





</RelativeLayout>
