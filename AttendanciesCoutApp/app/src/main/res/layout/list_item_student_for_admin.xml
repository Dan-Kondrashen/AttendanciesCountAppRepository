<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/border_for_item"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/list_item_studfio_text_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_for_text"

        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ФИО студента" />
    <TextView
        android:id="@+id/list_item_hide_id"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_for_text"
        android:visibility="gone"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ФИО студента" />

    <TextView
        android:id="@+id/list_item_studattendancies_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/border_for_text"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_studfio_text_view"
        app:layout_constraintTop_toTopOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>