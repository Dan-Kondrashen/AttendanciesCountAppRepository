<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="180dp"
    android:layout_margin="10dp"
    android:translationZ="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_for_item"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/list_item_group_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Наименование группы" />
    <TextView
        android:id="@+id/list_item_group_id_view"
        android:layout_below="@id/list_item_group_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Id группы"

        />
</RelativeLayout>
