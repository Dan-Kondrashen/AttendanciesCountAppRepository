<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="190dp"
    android:layout_margin="10dp"
    android:translationZ="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_for_item"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/list_item_doc_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Наименование документа" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_doc_name_view"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="дата начала" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="дата конца" />

    </LinearLayout>

</RelativeLayout>
